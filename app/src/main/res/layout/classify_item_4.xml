<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="480dp"
    android:background="@color/colorTabBack">

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/colorTab">
    </View>

    <LinearLayout
        android:id="@+id/Item_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        app:layout_heightPercent="8%">

        <TextView
            android:id="@+id/movietitle_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorTabText"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/textStartImage4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="5dp"
        />

    </LinearLayout>

    <android.support.percent.PercentFrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:id="@+id/bigitem"
            android:layout_width="match_parent"
            app:layout_heightPercent="55%"
            android:baselineAligned="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            >
            <ImageView
                android:id="@+id/bigImage"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_alignParentTop="true" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/bigImage"
                >
                <include
                    android:id="@+id/movievip0"
                    layout="@layout/vip_tab"
                    android:visibility="gone"
                    />
            </FrameLayout>

            <TextView
                android:id="@+id/bigImageText"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@id/bigImage"
                android:layout_marginStart="5dp"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@color/colorTab"
                />

            <TextView
                android:id="@+id/bigImage_minText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_below="@id/bigImageText"
                android:textColor="@color/colorMinTitle"
                />

            <TextView
                android:id="@+id/bigImage_msg"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="@color/colorTabText"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@id/bigImage"
                android:layout_marginEnd="3dp"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/colorTabBack"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/item4_6"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            app:layout_heightPercent="45%"
            android:baselineAligned="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            >

            <RelativeLayout
                android:id="@+id/movie1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="3dp">

                <ImageView
                    android:id="@+id/movieimage1"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/movieimage1"
                    >
                    <include
                        android:id="@+id/movievip1"
                        layout="@layout/vip_tab"
                        android:visibility="gone" />
                </FrameLayout>

                <TextView
                    android:id="@+id/movieimage_msg1"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="@color/colorImageMsg"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@id/movieimage1"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/colorTabBack"
                    />

                <TextView
                    android:id="@+id/movieitemtext1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/movieimage1"
                    android:textColor="@color/colorTab"
                    android:gravity="center|start"
                    android:textSize="12sp"
                    android:layout_marginStart="3dp"
                    android:maxLines="2"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/movie2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="3dp">

                <ImageView
                    android:id="@+id/movieimage2"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"

                    />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/movieimage2"
                    >
                    <include
                        android:id="@+id/movievip2"
                        layout="@layout/vip_tab"
                        android:visibility="gone"
                        />
                </FrameLayout>

                <TextView
                    android:id="@+id/movieimage_msg2"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="@color/colorImageMsg"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/colorTabBack"
                    android:layout_alignBottom="@+id/movieimage2"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/movieitemtext2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/movieimage2"
                    android:textColor="@color/colorTab"
                    android:gravity="center|start"
                    android:textSize="12sp"
                    android:layout_marginStart="3dp"
                    android:maxLines="2"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/movie3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="3dp">

                <ImageView
                    android:id="@+id/movieimage3"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/movieimage3"
                    >
                    <include
                        android:id="@+id/movievip3"
                        layout="@layout/vip_tab"
                        android:visibility="gone"
                        />
                </FrameLayout>

                <TextView
                    android:id="@+id/movieimage_msg3"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="@color/colorImageMsg"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@id/movieimage3"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/colorTabBack"
                    />

                <TextView
                    android:id="@+id/movieitemtext3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/movieimage3"
                    android:textColor="@color/colorTab"
                    android:gravity="center|start"
                    android:textSize="12sp"
                    android:layout_marginStart="3dp"
                    android:maxLines="2"
                    />

            </RelativeLayout>
        </LinearLayout>
    </android.support.percent.PercentFrameLayout>
</LinearLayout>