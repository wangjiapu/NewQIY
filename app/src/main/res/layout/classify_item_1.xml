                    android:layout_gravity="end">

                    <include
                        android:id="@+id/vip_2"
                        layout="@layout/vip_tab"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/gaoqin_2"
                        layout="@layout/gaoqin_tab"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/zhuanti_2"
                        layout="@layout/zhuanti_tab"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/dubo_2"
                        layout="@layout/dubo_tab"
                        android:visibility="gone" />

                </RelativeLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/big_title2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:gravity="bottom|start"
                android:text="程序猿的日常"
                android:textColor="@color/colorTab"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/min_title2"
                android:layout_width="match_parent"
