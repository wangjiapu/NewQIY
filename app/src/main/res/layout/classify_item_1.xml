                    android:layout_height="15dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/classify_background"
                    android:gravity="center_horizontal|start"
                    android:text="更新至102集"
                    android:textColor="@color/colorTabBack"
                    android:textSize="10sp" />
            </FrameLayout>

            <TextView
                android:id="@+id/big_title3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:gravity="bottom|start"
                android:text="程序猿的日常"
                android:textColor="@color/colorTab"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/min_title3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="58dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="燃烧生命已成常态"
                android:textColor="@color/colorMinTitle"
                android:textSize="11sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/classify_2"
            app:layout_heightPercent="42%"
            app:layout_widthPercent="50%"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:foreground="@drawable/ripple_classify_view"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/classify_2_Frame"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_margin="5dp"
                android:foreground="@drawable/ripple_classify_view">

                <ImageView
                    android:id="@+id/classify_2_Image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/classify_2_pagertext"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/classify_background"
                    android:gravity="center_horizontal|start"
                    android:text="更新至102集"
                    android:textColor="@color/colorTabBack"
                    android:textSize="10sp" />

                <RelativeLayout
                    android:id="@+id/Tab_Video2"
                    android:layout_width="wrap_content"
