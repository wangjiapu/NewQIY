                android:gravity="center|start"
                android:text="燃烧生命已成常态"
                android:textColor="@color/colorMinTitle"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/classify_1"
            app:layout_heightPercent="42%"
            app:layout_widthPercent="50%"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:foreground="@drawable/ripple_classify_view"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/classify_1_Frame"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_margin="5dp"
                android:foreground="@drawable/ripple_classify_view">

                <ImageView
                    android:id="@+id/classify_1_Image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <RelativeLayout
                    android:id="@+id/Tab_Video1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end">

                    <include
                        android:id="@+id/vip_1"
                        layout="@layout/vip_tab"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/gaoqin_1"
                        layout="@layout/gaoqin_tab"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/zhuanti_1"
                        layout="@layout/zhuanti_tab"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/dubo_1"
                        layout="@layout/dubo_tab"
                        android:visibility="gone" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/classify_1_pagertext"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/classify_background"
                    android:gravity="center_horizontal|start"
                    android:text="更新至102集"
                    android:textColor="@color/colorTabBack"
                    android:textSize="10sp" />

            </FrameLayout>

            <TextView
                android:id="@+id/big_title1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:gravity="bottom|start"
